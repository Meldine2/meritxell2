        android:orientation="horizontal"
        android:background="#6EC6FF"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
