<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#6EC6FF"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MERITXELL"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FDFCF9"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Donation Hub Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Hub"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_margin="16dp" />

            <!-- Banner -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/bannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_donation_banner" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#B3000000" />

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_below="@id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make a difference by donating"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btnDonateMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate Money"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#8DCFFF"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />
            </RelativeLayout>

            <!-- Item Donation Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you want to donate items?"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Food -->
                <LinearLayout
                    android:id="@+id/btnFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="55dp"
                        android:layout_height="57dp"
                        android:background="@drawable/bg_circle_outline"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_food"
                            android:tint="#000000" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Clothes -->
                <LinearLayout
                    android:id="@+id/btnClothes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="55dp"
                        android:layout_height="57dp"
                        android:background="@drawable/bg_circle_outline"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_clothes"
                            android:tint="#000000" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clothes"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Education -->
                <LinearLayout
                    android:id="@+id/btnEducation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="55dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_outline">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_education"
                            android:tint="#000000" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Toys -->
                <LinearLayout
                    android:id="@+id/btnToys"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="55dp"
                        android:layout_height="57dp"
                        android:background="@drawable/bg_circle_outline"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_toys"
                            android:tint="#000000" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toys"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Sponsor a Child -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponsor a child!"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Sponsor a Child -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sponsor a child!"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:orientation="horizontal">

                    <!-- Education Card -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="220dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/education_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btnSponsorEducation"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="#8DCFFF"
                            android:text="Donate"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <!-- Medicine Card -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="220dp"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/medicine_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medicine"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="8dp" />

                        <Button
                            android:id="@+id/btnSponsorMedicine"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="#8DCFFF"
                            android:text="Donate"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Track Donation Button -->
            <Button
                android:id="@+id/btnTrackDonation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Track Donation"
                android:background="#8DCFFF"
                android:textColor="#000" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
