<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/card_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/detailPrefSenderNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender Name: "
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/detailPrefChildNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Name: "
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/detailPrefStatusTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: "
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/detailMatchedPreferencesTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matched Preferences:"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="4dp"/> </LinearLayout>