<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- HEADER (Back Button, Logo and Title) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#6EC6FF"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
        android:contentDescription="Back"
        android:layout_marginEnd="16dp"/>

        <!-- Logo + Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MERITXELL"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <!-- BODY (Make it scrollable and take up full space) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <!-- Content inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Schedule Appointment Header -->
            <TextView
                android:id="@+id/scheduleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule an Appointment"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to the Adoption Assistance and Donation Management System. Please review all fields in the online form carefully and ensure that all information provided is complete, accurate, and truthful."
                android:textSize="14sp"
                android:textColor="#606060"
                android:layout_marginBottom="16dp"/>



            <!-- Terms and Conditions Header -->
            <TextView
                android:id="@+id/termsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Terms and Conditions Body -->
            <TextView
                android:id="@+id/termsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This appointment and scheduling system allocates slots on a first-come, first-served basis."
                android:textSize="14sp"
                android:textColor="#606060"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/termsDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prospective Adoptive Parents (PAPs) are encouraged to book their appointments with the CSWDO officers as early as possible to secure their preferred schedule. Failure to attend a scheduled appointment without prior notice may require rebooking, subject to availability, and may cause delays in the adoption process. Additionally, users must ensure that all uploaded documents are authentic, clear, and complete, as any falsified or inconsistent submission may result in rejection."
                android:textSize="14sp"
                android:textColor="#606060"
                android:layout_marginBottom="16dp"/>

            <!-- Terms and Conditions CheckBox -->
            <CheckBox
                android:id="@+id/termsCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By continuing, I acknowledge that I have read, understood, and agreed to these Terms and Conditions."
                android:textSize="12sp"
                android:layout_marginBottom="16dp"/>

            <!-- Get Started Button -->
            <Button
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/box_button"
                android:layout_marginBottom="16dp"/>

            <!-- Info Message After Button -->
            <TextView
                android:id="@+id/afterAgreementText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After agreeing to the Terms and Conditions above, you may start your online application by clicking 'Get Started'"
                android:textSize="12sp"
                android:textColor="#606060"
                android:layout_marginTop="8dp"/>

            <!-- View Appointment Button -->
            <Button
                android:id="@+id/btnViewAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_border_background"
                android:text="View Appointment"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
