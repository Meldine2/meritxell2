<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Banner Image -->
        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:src="@drawable/meritxell_banner" />

        <!-- Chat Bubble Welcome -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="186dp"
                android:contentDescription="Ally Robot"
                android:src="@drawable/ally_bot" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_message"
                android:padding="12dp"
                android:text="Welcome to Meritxell!\n\nI'm Ally, I’m so glad you’re here. Our mission is to assist and support you every step of the way. Whatever your journey may be, we are here to help you with the resources and guidance you need."
                android:textSize="14sp"
                android:textColor="#000"
                android:typeface="sans" />
        </LinearLayout>

        <!-- Login Box -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_box"
            android:padding="16dp"
            android:text="Please Login First to continue."
            android:textColor="#333" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Login"
            android:backgroundTint="#88C9F9"
            android:textColor="#fff" />

        <!-- Sign Up Option -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_gravity="center">

            <TextView
                android:text="Don't have an account? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/signupLink"
                android:text="Sign up."
                android:textColor="#cc0000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
